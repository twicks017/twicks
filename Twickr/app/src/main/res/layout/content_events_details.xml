<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:background="#f5f5f5"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context="com.example.appleworksltd.twickr.MainFiles.EventsDetails"
    tools:showIn="@layout/activity_events_details">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="310dp"
            android:id="@+id/image1"
            android:padding="0dp"
            android:src="@drawable/concert"
            android:scaleType="centerCrop"/>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textColor="@color/colorAccent"
                android:id="@+id/detName"
                android:paddingLeft="15dp"
                android:paddingTop="15dp"


                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date"
                android:textColor="@color/colorAccent"
                android:layout_alignParentEnd="true"
                android:id="@+id/detDate"
                android:paddingRight="15dp"
                android:paddingTop="15dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Venue"
                android:textColor="@color/colorAccent"
                android:layout_below="@+id/detName"
                android:id="@+id/detVenue"
                android:padding="15dp"
                />

            <TextView
                android:textColor="@color/colorAccent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:layout_below="@+id/detVenue"
                android:id="@+id/detDesc"
                android:padding="15dp"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true"
                android:paddingRight="10dp"
                android:paddingBottom="60dp"
                android:layout_centerHorizontal="true">

            <TextView
                android:textColor="@color/colorAccent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/detClass"
                android:text="Ticket Price"


                />

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/spin"
                android:textColor="@color/colorAccent"
                android:paddingLeft="20dp"
                android:spinnerMode="dropdown"
                android:layout_toEndOf="@+id/detClass"
                 />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/detPrice"
                android:textColor="@color/colorAccent"
                android:paddingLeft="20dp"
                android:text="price"
                android:layout_toEndOf="@+id/spin"
                />
            </LinearLayout>



        </RelativeLayout>


    </LinearLayout>


</RelativeLayout>
