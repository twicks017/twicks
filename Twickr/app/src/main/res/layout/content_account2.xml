<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_account2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:background="#f5f5f5"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.appleworksltd.twickr.MainFiles.AccountDetails"
    tools:showIn="@layout/activity_account2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:id="@+id/Accimage"
            android:padding="0dp"
            android:src="@drawable/concert"
            android:scaleType="centerCrop"/>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textColor="@color/colorAccent"
                android:textSize="15dp"
                android:textStyle="bold"
                android:id="@+id/AccName"
                android:paddingLeft="15dp"
                android:paddingTop="15dp"


                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date"
                android:textSize="13dp"
                android:textColor="@color/colorAccent"
                android:layout_alignParentEnd="true"
                android:id="@+id/AccDate"
                android:layout_alignParentBottom="true"
                android:paddingRight="15dp"
                android:paddingBottom="15dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Venue"
                android:id="@+id/AccVenue"
                android:padding="15dp"
                android:textColor="@color/colorAccent"
                android:textSize="15dp"
                android:layout_alignParentBottom="true"
                android:paddingBottom="15dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location"
                android:id="@+id/AccLoc"
                android:textSize="13dp"
                android:textColor="@color/colorAccent"
                android:layout_toRightOf="@+id/AccVenue"
                android:layout_alignParentBottom="true"
                android:paddingBottom="15dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category"
                android:textColor="@color/colorAccent"
                android:id="@+id/AccCat"
                android:textSize="13dp"
                android:paddingRight="15dp"
                android:layout_alignParentEnd="true"
                android:paddingTop="15dp"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:orientation="vertical"
                android:layout_marginTop="40dp"
                android:background="@color/colorPrimary">
                <ImageView
                    android:paddingTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:id="@+id/image"
                    android:src="@drawable/concert"
                    />

                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Code"
                    android:textColor="#ffffff"
                    android:layout_below="@+id/image"
                    android:id="@+id/code"
                    android:layout_centerHorizontal="true"
                    android:textSize="13dp"
                    android:paddingBottom="5dp"
                    />
            </RelativeLayout>






        </RelativeLayout>


    </LinearLayout>


</RelativeLayout>
